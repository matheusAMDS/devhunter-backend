{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "lib": ["esnext"],                       
    "sourceMap": true,                     
    "outDir": "dist",
    "strict": true,                           
    "resolveJsonModule": true,
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  }
}
